<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:id="@+id/tixian_rel_two"
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#A098AB" >

        <TextView
            android:id="@+id/tixian_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="提现50元"
            android:textColor="#ffffff"
            android:textSize="@dimen/tixian_item_title_textsize" />

        <TextView
            android:id="@+id/tixian_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tixian_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="每笔1000喵币可以兑换100元"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tixian_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tixian_title"
            android:layout_alignBottom="@+id/tixian_title"
            android:layout_toRightOf="@+id/tixian_title"
            android:text="(剩余:78份)"
            android:layout_marginLeft="5dp"
            android:textColor="#ffffff"
            android:textSize="@dimen/tixian_item_count_textsize" />

    </RelativeLayout>

</LinearLayout>
