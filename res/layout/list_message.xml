<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/message_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_launcher"
        android:layout_marginLeft="10dp"
         />

    <TextView
        android:id="@+id/message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/message_image"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/message_time"
        android:layout_toRightOf="@+id/message_image"
        android:text="中国电信"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/texttitle"
        android:textSize="14sp" />

    <TextView
        android:textColor="@color/textcontent"
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/message_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textSize="10sp"
        android:text="2014年10月28日" />

    <TextView
        android:id="@+id/message_content"
        android:layout_width="wrap_content"
        android:textColor="@color/textcontent"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:layout_alignLeft="@+id/message_title"
        android:layout_below="@+id/message_title"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:text="恭喜您获得了电信200元大礼包恭喜您获得了电信200元大礼包恭喜您获得了电信200元大礼包" />

</RelativeLayout>
