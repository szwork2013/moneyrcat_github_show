<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <include layout="@layout/back_header" />
    <RelativeLayout
        android:id="@+id/editinfo_headerimage_layout"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/white_selector"
        android:onClick="onClick" >

        <TextView
            android:id="@+id/textView3222222211"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="头像"
            android:textColor="@color/texttitle" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:src="@drawable/right_arrow" />

        <ImageView
            android:id="@+id/editinfo_headerimage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="21dp"
            android:layout_toLeftOf="@+id/imageView1"
             />

    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />
    <RelativeLayout
        android:id="@+id/editinfo_nickname"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/white_selector"
        android:onClick="onClick" >

        <TextView
            android:id="@+id/textView3222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="昵称"
            android:textColor="@color/texttitle" />

        <TextView
            android:id="@+id/editinfo_nicknametext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3222"
            android:layout_alignBottom="@+id/textView3222"
            android:layout_alignParentRight="true"
            android:layout_marginRight="47dp"
            android:text="暴走青年暴走青年啊啊"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/textcontent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/editinfo_gender"
        android:background="@drawable/white_selector"
        android:onClick="onClick" >

        <TextView
            android:id="@+id/textView322211"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="性别"
            android:textColor="@color/texttitle" />

        <TextView
            android:id="@+id/editinfo_gendertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView322211"
            android:layout_alignBottom="@+id/textView322211"
            android:layout_alignParentRight="true"
            android:layout_marginRight="47dp"
            android:text="男"
            android:textColor="@color/textcontent" />

        <ImageView
            android:id="@+id/imageView122"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:id="@+id/editinfo_age"
        android:layout_height="60dp"
        android:background="@drawable/white_selector"
        android:onClick="onClick" >

        <TextView
            android:id="@+id/textView322211222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="年龄"
            android:textColor="@color/texttitle" />

        <TextView
            android:id="@+id/editinfo_agetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView322211222"
            android:layout_alignBottom="@+id/textView322211222"
            android:layout_alignParentRight="true"
            android:layout_marginRight="47dp"
            android:text="22岁"
            android:textColor="@color/textcontent" />

        <ImageView
            android:id="@+id/imageView12211"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/editinfo_address"
        android:background="@drawable/white_selector"
        android:onClick="onClick" >

        <TextView
            android:id="@+id/textView322211222222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="地址"
            android:textColor="@color/texttitle" />

        <ImageView
            android:id="@+id/imageView1221133"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:src="@drawable/right_arrow" />

        <TextView
            android:id="@+id/editinfo_addresstext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/imageView1221133"
            android:layout_toRightOf="@+id/textView322211222222"
            android:singleLine="true"
            android:text="北京市朝阳区三里屯SHOH A122"
            android:textColor="@color/textcontent" />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />
<RelativeLayout
            android:id="@+id/myinfo_tel"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@drawable/white_selector"
            android:onClick="onClick" >

            <TextView
                android:id="@+id/textView3222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="手机号码"
                android:textColor="@color/texttitle" />

            <TextView
                android:id="@+id/myinfo_tel_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView3222"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/textView3222"
                android:text="13244422122"
                android:textColor="@color/textcontent" />

            <ImageView
                android:id="@+id/imageView322"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="21dp"
                android:src="@drawable/right_arrow" />
        </RelativeLayout>
        <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />
    <Button
        android:onClick="onClick"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="50dp"
        android:id="@+id/editinfo_done_button"
        android:textColor="@color/texttitle"
        android:background="@drawable/commit_bt_selector"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="确认修改" />

</LinearLayout>