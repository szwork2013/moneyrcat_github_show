<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/wodeinfo"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:onClick="onClick"
                android:background="@drawable/white_selector"
                 >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/right_arrow" />

                <ImageView
                    android:id="@+id/headerImage"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:onClick="onClick" />

                <TextView
                    android:id="@+id/mytab_genderageaddr"
                    android:layout_width="fill_parent"
                    android:layout_marginRight="30dp"
                    android:text="1111"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/headerImage"
                    android:layout_alignLeft="@+id/mytab_nickname"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/textcontent"
                    android:textSize="@dimen/wodetab_info_addr_textsize" />

                <TextView
                    android:id="@+id/mytab_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/headerImage"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/headerImage"
                    android:text="流金岁月"
                    android:textColor="#000000"
                    android:textSize="@dimen/wodetab_info_nickname_textsize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mytab_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1111"
                    android:layout_marginTop="5dp"
                    android:layout_alignLeft="@+id/mytab_genderageaddr"
                    android:layout_below="@+id/mytab_nickname"
                    android:textColor="@color/textcontent"
                    android:textSize="@dimen/wodetab_info_phone_textsize" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cdcdcd" />

            <RelativeLayout
                android:id="@+id/wodeshenling"
                android:onClick="onClick"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:background="@drawable/white_selector" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/wodeguanggao" />

                <TextView
                    android:id="@+id/mytab_nickname222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/imageView1"
                    android:text="我的广告"
                    android:textColor="@color/texttitle" />

                <ImageView
                    android:id="@+id/imageView2221"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/right_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cdcdcd" />

            <RelativeLayout
                android:id="@+id/woyaotixian"
                android:layout_width="fill_parent"
                android:onClick="onClick"
                android:layout_height="60dp"
                android:background="@drawable/white_selector" >

                <ImageView
                    android:id="@+id/imageView1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/woyaotixian" />

                <TextView
                    android:id="@+id/mytab_nickname_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/imageView1_1"
                    android:text="我要提现"
                    android:textColor="@color/texttitle" />

                <ImageView
                    android:id="@+id/imageView2_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/right_arrow" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cdcdcd" />

            <RelativeLayout
                android:id="@+id/chaozhiduihuan"
                android:layout_width="fill_parent"
                android:onClick="onClick"
                android:layout_height="60dp"
                android:background="@drawable/white_selector" >

                <ImageView
                    android:id="@+id/imageView1_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/chaozhiduihuan" />

                <TextView
                    android:id="@+id/mytab_nickname_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/imageView1_3"
                    android:text="超值兑换"
                    android:textColor="@color/texttitle" />

                <ImageView
                    android:id="@+id/imageView2_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/right_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cdcdcd" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>