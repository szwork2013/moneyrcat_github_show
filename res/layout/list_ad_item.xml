<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_selector" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />

    <ImageView
        android:id="@+id/adIcon"
        android:layout_width="@dimen/list_aditem_headimage_wh"
        android:layout_height="@dimen/list_aditem_headimage_wh"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/adIcon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/adTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_aditem_headimage_margin_top"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="title"
            android:textColor="@color/texttitle"
            android:textSize="@dimen/list_aditem_title_textsize" />

        <TextView
            android:id="@+id/adDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_aditem_adcontent_margin_top"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="全新BMW M3和全新BMW M4双门跑车即将上市全新BMW M3和全新BMW M4双门跑车即将上市全新BMW M3和全新BMW M4双门跑车即将上市"
            android:textColor="@color/textcontent"
            android:textSize="@dimen/list_aditem_content_textsize" />

        <TextView
            android:id="@+id/adBalanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="@dimen/list_aditem_adcontent_margin_top"
            android:drawableLeft="@drawable/rmbicon_1"
            android:drawablePadding="3dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="总金额:500000.0"
            android:textColor="#6F0A0E"
            android:textSize="@dimen/list_aditem_balance_textsize" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ad_over_icon" />

</RelativeLayout>