<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:background="@drawable/white_selector" >

    <ImageView
        android:id="@+id/duihuan_icon"
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
         />

<TextView
    android:layout_marginTop="5dp"
    android:id="@+id/duihuan_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="19dp"
    android:textSize="20sp"
    android:layout_toRightOf="@+id/duihuan_icon"
    android:text="50元京东礼品卡"
    android:textColor="@color/texttitle" />

<LinearLayout
    android:id="@+id/linearLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/duihuan_title"
    android:layout_below="@+id/duihuan_title"
    android:layout_marginTop="4dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/duihuanBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="价值:6.8元"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/textcontent"
        android:textSize="10sp" />

    <TextView
        android:textColor="@color/textcontent"
        android:id="@+id/duihuanCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="剩余:20张"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="10sp" />
</LinearLayout>

<RelativeLayout
    android:id="@+id/linearLayout122"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/duihuan_title"
    android:layout_below="@+id/linearLayout1"
    android:layout_marginTop="8dp"
     >

    <TextView
        android:id="@+id/duihuanBalanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="兑换"
        android:textSize="13sp"
        android:textColor="@color/textcontent"
        android:textAppearance="?android:attr/textAppearanceSmall"
         />

    <ImageView
        android:id="@+id/duihuanCount22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/right_arrow" />

</RelativeLayout>
</RelativeLayout>